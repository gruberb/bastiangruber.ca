---
layout: base
---

<section class="hero grid-background">
  <div class="container">
    <div class="hero-content">
      <div class="hero-text">
        <h1>{{ site.name }}</h1>
        <p class="hero-subtitle">Software Engineer & Author</p>
        <div class="hero-description">
          {{ content | safe }}
        </div>
      </div>
      <div class="hero-visual">
        <div class="code-window">
          <div class="window-header">
            <div class="window-dot dot-red"></div>
            <div class="window-dot dot-yellow"></div>
            <div class="window-dot dot-green"></div>
          </div>
          <div class="code-display">
            <div class="code-line">
              <span class="line-number">1</span>
              <span class="code-content"><span class="rust-keyword">use</span> <span class="rust-type">axum</span>::{response::Json, routing::get, Router};</span>
            </div>
            <div class="code-line">
              <span class="line-number">2</span>
              <span class="code-content"></span>
            </div>
            <div class="code-line">
              <span class="line-number">3</span>
              <span class="code-content"><span class="rust-keyword">async fn</span> <span class="rust-type">hello</span>() -> Json&lt;&amp;'static str&gt; {</span>
            </div>
            <div class="code-line">
              <span class="line-number">4</span>
              <span class="code-content">&nbsp;&nbsp;&nbsp;&nbsp;Json(<span class="rust-string">"Building with Rust!"</span>)</span>
            </div>
            <div class="code-line">
              <span class="line-number">5</span>
              <span class="code-content">}</span>
            </div>
            <div class="code-line">
              <span class="line-number">6</span>
              <span class="code-content"></span>
            </div>
            <div class="code-line">
              <span class="line-number">7</span>
              <span class="code-content"><span class="rust-comment">// "Building with Rust!" ðŸ¦€</span></span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="cta-buttons">
        <a href="{{ '/blog/' | url }}" class="btn btn-secondary">Blog</a>
        <a href="{{ '/talks/' | url }}" class="btn btn-secondary">Talks & Interviews</a>
        <a href="{{ '/projects/' | url }}" class="btn btn-secondary">Side Projects</a>
        <a href="{{ '/about/' | url }}" class="btn btn-secondary">About Me</a>
        <a href="https://rustwebdevelopment.com" class="btn btn-secondary" target="_blank" rel="noopener">My Book â†’</a>
    </div>
  </div>
</section>
<section class="recent-posts">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Recent Posts</h2>
      <p class="section-subtitle">Thoughts on Rust, web development, and software engineering</p>
    </div>
    <div class="posts-grid">
    {% set recentPosts = collections.posts | head(-3) %}
    {% for post in recentPosts %}
      {% include "post-card.njk" %}
    {% endfor %}
    </div>
    <div style="text-align: center; margin-top: 2rem;">
      <a class="all-posts-link" href="{{ '/blog/' | url }}">View All Posts â†’</a>
    </div>
  </div>
</section>
